@{
    ViewData["Title"] = "My Podcasts";
}

@model MissionAssignment4.Models.MovieApplicationResponse;

<h1>Enter the movie data</h1>

<div>
    <form method="post">



        <label id="title" asp-for="Title">Title: </label>
        <input asp-for="Title" /><br />

        <label id="year" asp-for="Year">Year: </label>
        <input asp-for="Year" /><br />

        <label id="category" asp-for="Category">Category: </label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category i in ViewBag.Categories)
            {
                <option value="@i.CategoryId">@i.CategoryName</option>
            }
        </select><br />

        <label id="director" asp-for="Director">Director: </label>
        <input asp-for="Director" /><br />

        <label id="rating" asp-for="Rating">Rating: </label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label id="edited" asp-for="Edited">Edited: </label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label id="lentTo" asp-for="LentTo">LentTo: </label>
        <input asp-for="LentTo" /><br />

        <label id="notes" asp-for="Notes">Notes: </label>
        <input asp-for="Notes" /><br />

        <input id="submit" type="submit" value="Submit New Movie" />
        <br />
        <br />
        <br />
        <br />

        <div asp-validation-summary="All"></div>
    </form>
</div>